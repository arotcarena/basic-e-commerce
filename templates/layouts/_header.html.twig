{% block add_stylesheets %}
    {{ encore_entry_link_tags('header') }}
{% endblock %}

{% block add_javascripts %}
    {{ encore_entry_script_tags('header') }}
{% endblock %}

<header 
    id="header" 
    class="header" 
    data-categories={{ category_global_provider.jsonMenuList }} 
    {% if category is defined %}data-activecategory="{{ category.id }}"{% endif %}
    {% if subCategory is defined %}data-activesubcategory="{{ subCategory.id }}"{% endif %}
    >
    <!-- HEADER SANS REACT -->
    <div class="header-top">
        <a href="/">
            <img class="header-logo" src="/img/logo.png" alt="logo du site" />
        </a>
    </div>
</header>